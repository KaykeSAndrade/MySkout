<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JanelaTableActivity">

    <EditText
        android:id="@+id/edtUsuario"
        android:drawableRight="@drawable/ic_baseline_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:contentDescription="UsuÃ¡rio"
        android:hint="@string/insira_seu_email"
        android:inputType="textEmailAddress"
        android:maxLength="50" />

    <EditText
        android:id="@+id/edtSenha"
        android:drawableRight="@drawable/ic_baseline_lock"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:contentDescription="Senha"
        android:hint="@string/insira_sua_senha"
        android:inputType="textPassword"
        android:maxLength="30" />
    <TableRow>
    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:layout_weight="1"
        android:layout_margin="5dp"/>


    <Button
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:layout_weight="1"
        android:layout_margin="5dp"
        />
    </TableRow>
</TableLayout>